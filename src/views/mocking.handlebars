<form action="/api/products/mockingproducts" method="GET">
  <input type="text" name="query" value="{{query}}" placeholder="Buscar..." />
  <input type="hidden" name="limit" value="{{limit}}" />
  <input type="hidden" name="sort" value="{{sort}}" />
  <button type="submit">Search</button>
  <a href="/api/products/mockingproducts">Remove filters</a>
</form>

<form action="/api/session/logout" method="GET">
  <h1>Welcome, {{userEmail}}!</h1>
  <p>Role: {{userRole}}</p>
  <button type="submit">Logout</button>
</form>

<div>
  {{#each mockingProducts.docs}}
    <div>
      <h2>{{this.title}}</h2>
      <p>{{this.description}}</p>
      <p>{{this.category}}</p>
      <p>Stock: {{this.stock}}</p>
      <h3>Price: $ {{this.price}}</h3>
      <hr>
  {{/each}}
</div>

{{#if mockingProducts.hasPrevPage}}
  <a
    href="/api/products/mockingproducts?page={{mockingProducts.prevPage}}&limit={{limit}}&sort={{sort}}&query={{query}}"
  >Previous page</a>
{{/if}}

{{#if mockingProducts.hasNextPage}}
  <a
    href="/api/products/mockingproducts?page={{mockingProducts.nextPage}}&limit={{limit}}&sort={{sort}}&query={{query}}"
  >Next page</a>
{{/if}}